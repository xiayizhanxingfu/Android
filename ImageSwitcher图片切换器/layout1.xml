<ImageView
    android:id="@+id/imageView"
    android:layout_width="300dp"
    android:layout_height="200dp" />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
    android:id="@+id/front"
    android:text="上一张"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/next"
        android:text="下一张"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/switchover"
        android:text="切换视图"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>